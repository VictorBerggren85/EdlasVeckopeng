<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity_spine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_dark"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <FrameLayout
        android:id="@+id/MainActivity_FrameViwe_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <ProgressBar
            android:id="@+id/MainAmount_progressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:progressTint="@color/purple_medium"
            android:visibility="visible" />

        <TextView
            android:id="@+id/MainAmount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:alpha="0.85"
            android:gravity="center_horizontal|center_vertical"
            android:text="0.00"
            android:textAlignment="center"
            android:textColor="@color/purple_medium"
            android:textColorHighlight="@color/pink"
            android:textColorLink="@color/purple_light"
            android:textSize="96sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/MAinActivity_OpenMenuButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="50dp"
            android:background="@drawable/rounded_buttons"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            android:text="spara"
            android:textColor="@color/purple_dark"
            android:textColorHighlight="@color/pink"
            android:textColorHint="@color/purple_light"
            android:textColorLink="@color/purple_medium"
            android:textSize="34sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/MainNameDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Edlas sparplan"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/purple_medium"
            android:textColorHighlight="@color/pink"
            android:textColorHint="@color/purple_light"
            android:textColorLink="@color/purple_medium"
            android:textSize="34sp"
            android:textStyle="bold" />
    </FrameLayout>

</LinearLayout>